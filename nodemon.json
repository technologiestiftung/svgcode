{
    "ignore": [
        "**/*.test.ts",
        "**/*.spec.ts",
        ".git",
        "node_modules/**/node_modules"
    ],
    "watch": ["./src"],
    "exec": "./node_modules/.bin/tsc -p . && node --inspect=9228 dist/index.js",
    "ext": "ts,tsx,json",
    "restartable": "rs",
    "verbose": true,
    "env": {
        "NODE_ENV": "development"
      }
}
