{
  "exclude": [
    "node_modules",
    "__tests__",
    ".vscode"
  ],
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "es2018",
      "dom"
    ],
    "outDir": "./dist/",
    "rootDir": "./src/",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
